html(ng-app='FireCalc' ng-controller='CalculateController as calculate')
    head
        title=title
        link(href='./bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        link(href='./bower_components/bootstrap/dist/css/firecalc.css', rel='stylesheet')
        script(src='./bower_components/angular/angular.min.js')
        script(src='./js/controllers/calculate-controller.js')

    body
        .container
            .navbar.navbar-default.navbar-fixed-top
                .container
                    .navbar-header
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='#') FireCalc
                    .collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li.active
                                a(href='#incomeTest') Income
                            li
                                a(href='#loans') Loans
                            li
                                a(href='#retirement') Retirement
            .jumbotron
                h1 Welcome to the FIRE Calculator
                h3 Please enter your Annual Income and Savings Percentage to determine the number of years until you will be financially independent!
            .buffer
            form.form-horizontal
                .form-group
                    label.col-sm-2(for='income') Annual Income:
                    .col-sm-10
                        input.form-control(type='text', name='income', id='income', ng-model='calculate.income', placeholder='Income')
                .form-group
                    label.col-sm-2(for='savingsPercentage') Savings Percentage:
                    .col-sm-10
                        input.form-control(type='text', name='savingsPercentage', id='savingsPercentage', ng-model='calculate.savingsPercentage' placeholder='Percentage')
                button.btn.btn-default(type='submit') Calculate
            label.col-sm-2(for='Result') Result
            .col-sm-10
                label.col-sm-10 {{ calculate.total() }}
